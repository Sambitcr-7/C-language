    }
    else
    {
        printf("The number is odd\n");
    }
    return 0;
}

//  6 Print Hello GGV 10 times with for loop
#include <stdio.h>
int main()
{
    int i;
    for (i = 0; i < 10; i++)
    {
        printf("Hello ggv\n");
    }
    return 0;
}

// 6.1 Print Hello GGV 10 times with while loop
#include <stdio.h>
int main()
{
    int i = 0;
    while (i < 10)
    {
        printf("Hello ggv\n");
        i++;
    }
    return 0;
}

