//1 add all even digits of given number N using function 
#include <stdio.h>
int EvenDigitsSum(int input1)
{
    int rem, sum = 0;
    while(input1 !=0)
    {
        rem=input1%10;
        if(rem%2==0)
        {
            sum=sum+rem;
        }
        input1 = input1/10;
    }
    return sum;
}
int main()
{
    int num;
    printf("Enter the number : ");
    scanf("%d", &num);
    printf("%d",EvenDigitsSum(num));
    return 0;
}


//2 print world in c language
#include<stdio.h>
int main()
{
    char s[]="World";
    int i, j;
    for(i=0;s[i];i++)
    {
        for(j=0;j<=i;j++)
        printf("%c",s[j]);
        printf("\n");
    }
    return 0;
}

//3 write a  C program if input is BRICS then display BARAIACAS
#include<stdio.h>
#include<string.h>
int main()
{
    char str[20];
    int i;
    printf("Enter a string  : ");
    scanf("%s",&str);
    for(int i = 0; i < strlen(str);i++)
    {
        if(i != 0)
        {
            printf("%c",65);
        }
        printf("%c",str[i]);
    }
    return 0;
}

//4 find sum of following series 1^3+2^3+3^3+.......+n^3
#include<stdio.h>
int main()
{
    int num;
    printf("Enter the number of term : ");
    scanf("%d",&num);
    printf("Requried output is %d",cubfun(num));
    return 0;
}
int cubfun(int a)
{
    int sum = 0;
    for(int i = 1; i <=a; i++)
    {
        sum=sum+(i*i*i);
    }
    return sum;
}


